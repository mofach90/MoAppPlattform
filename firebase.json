{
  "hosting": {
    "public": "dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "hosting": {
      "port": 5033,
      "public": "public"
    },
    "auth": {
      "port": 8500
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true
  }
}
